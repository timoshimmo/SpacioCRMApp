<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    android:soundEffectsEnabled="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/rb_margin_right">

        <TextView
            android:text="@string/str_select_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtContactAddListDialogTitle"
            android:textSize="@dimen/dialog_title_text_size"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/custom_dark_gray"
            android:paddingBottom="@dimen/rb_margin_right" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rgDialogContactSelection" >

            <RadioButton
                android:text="@string/str_add_new_contact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/rd_grp_height"
                android:id="@+id/rbContactSelectionNewContact"
                android:layout_weight="1"
                android:textColor="@color/custom_dark_gray"
                android:textSize="@dimen/dialog_title_text_size"
                android:button="@drawable/radio_button_style"
                android:paddingStart="@dimen/rb_space_margin_right"
                android:paddingLeft="@dimen/rb_space_margin_right"
                android:paddingEnd="@dimen/rb_space_margin_right"
                android:paddingRight="@dimen/rb_space_margin_right" />

            <RadioButton
                android:text="@string/str_existing_contact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/rd_grp_height"
                android:id="@+id/rbDialogExistingContact"
                android:layout_weight="1"
                android:textColor="@color/custom_dark_gray"
                android:textSize="@dimen/dialog_title_text_size"
                android:button="@drawable/radio_button_style"
                android:paddingLeft="@dimen/rb_space_margin_right"
                android:paddingStart="@dimen/rb_space_margin_right"
                android:paddingRight="@dimen/rb_space_margin_right"
                android:paddingEnd="@dimen/rb_space_margin_right" />


        </RadioGroup>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_marginTop="@dimen/rb_margin_right">

            <Button
                android:text="@string/str_cancel"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancelContactSelectionType"
                android:textAllCaps="false"
                android:textSize="@dimen/dialog_title_text_size"
                android:textColor="@color/custom_dark_gray"
                android:layout_width="@dimen/btn_dialog_width"
                android:background="@drawable/dialog_cancel_buttons_background"
                android:fontFamily="sans-serif"
                style="@style/Widget.AppCompat.Button.Borderless" />

            <Button
                android:text="@string/str_ok"
                android:layout_height="wrap_content"
                android:id="@+id/btnConfirmContactSelectionType"
                android:layout_width="@dimen/btn_dialog_width"
                android:textAllCaps="false"
                android:textSize="@dimen/dialog_title_text_size"
                android:textColor="@color/customBlueTheme"
                android:background="@drawable/dialog_ok_buttons_background"
                android:fontFamily="sans-serif"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_marginLeft="@dimen/rb_space_margin_right"
                android:layout_marginStart="@dimen/rb_space_margin_right" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>